{
    "swagger": "2.0",
    "info": {
        "version": "1.0",
        "title": "Authors API",
        "description": "API для управления авторами"
    },
    "paths": {
        "/api/authors/": {
            "post": {
                "tags": ["Authors"],
                "summary": "Создать нового автора",
                "description": "Добавляет нового автора в систему",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Данные автора",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Author"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Автор успешно создан",
                        "schema": {
                            "$ref": "#/definitions/Author"
                        }
                    },
                    "400": {
                        "description": "Ошибка валидации"
                    },
                    "500": {
                        "description": "Ошибка базы данных"
                    }
                }
            }
        },
        "/api/authors/{author_id}": {
            "get": {
                "tags": ["Authors"],
                "summary": "Получить автора по ID",
                "description": "Возвращает информацию об авторе и список его книг",
                "parameters": [
                    {
                        "name": "author_id",
                        "in": "path",
                        "description": "ID автора",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Успешный запрос",
                        "schema": {
                            "$ref": "#/definitions/AuthorWithBooks"
                        }
                    },
                    "404": {
                        "description": "Автор не найден"
                    }
                }
            },
            "delete": {
                "tags": ["Authors"],
                "summary": "Удалить автора",
                "description": "Удаляет автора и все его книги из системы",
                "parameters": [
                    {
                        "name": "author_id",
                        "in": "path",
                        "description": "ID автора",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Автор успешно удален"
                    },
                    "404": {
                        "description": "Автор не найден"
                    }
                }
            }
        }
    },
    "definitions": {
        "Author": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "readOnly": true,
                    "description": "Уникальный идентификатор автора"
                },
                "first_name": {
                    "type": "string",
                    "description": "Имя автора",
                    "required": true
                },
                "last_name": {
                    "type": "string",
                    "description": "Фамилия автора",
                    "required": true
                },
                "middle_name": {
                    "type": "string",
                    "description": "Отчество автора (необязательное)"
                }
            },
            "required": ["first_name", "last_name"]
        },
        "AuthorWithBooks": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "Уникальный идентификатор автора"
                },
                "first_name": {
                    "type": "string",
                    "description": "Имя автора"
                },
                "last_name": {
                    "type": "string",
                    "description": "Фамилия автора"
                },
                "middle_name": {
                    "type": "string",
                    "description": "Отчество автора"
                },
                "books": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "integer",
                                "description": "ID книги"
                            },
                            "title": {
                                "type": "string",
                                "description": "Название книги"
                            }
                        }
                    }
                }
            }
        }
    }
}